<?xml version="1.0" encoding="UTF-8"?>
<window>
	<views>50</views>
	<backgroundcolor>bgcolor</backgroundcolor>
	<controls>
		<include>BackgroundContent</include>
		<include>GlobalFanart</include>
		<include>BackgroundVignette</include>
			<!-- ============== -->
			<!-- Search Results -->
			<!-- ============== -->
			<control type="group">
				<width>1280</width>
				<animation type="WindowOpen" reversible="false">
					<include>CommonVisibleEffect</include>
				</animation>
				<animation type="WindowClose" reversible="false">
					<include>CommonHiddenEffect</include>
				</animation>
				<include>VisibleHiddenSlideAnimation</include>
				<visible>![Window.IsActive(DialogVideoInfo.xml) | Window.IsActive(DialogMusicInfo.xml) | Window.IsActive(AddonInformation) | Window.IsActive(DialogPVRInfo.xml) | Window.IsActive(PlayerControls) | Window.IsActive(Favourites)]</visible>
					<!-- Search Results -->
				<control type="group">
					<left>45</left>
					<include>GlobalSearch_Labels</include>
					<animation effect="slide" start="0,0" end="0,50" time="200" tween="sine" easing="out" condition="![Control.IsVisible(991) | Control.HasFocus(9000)]">Conditional</animation>
					<control type="fixedlist" id="50">
						<left>0</left>
						<top>245</top>
						<width>1190</width>
						<height>256</height>
						<onleft>50</onleft>
						<onright>50</onright>
						<ondown>9000</ondown>
						<preloaditems>2</preloaditems>
						<focusposition>0</focusposition>
						<orientation>horizontal</orientation>
						<scrolltime tween="Quadratic" easing="out">300</scrolltime>
						<animation effect="slide" start="0,0" end="0,67" condition="Container.Content(Episodes)">Conditional</animation>
						<animation effect="slide" start="0,0" end="0,12" condition="![Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos) | Container.Content(Episodes)]">Conditional</animation>
						<itemlayout condition="Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos)" height="256" width="149.5">
							<include>HomeWidgets_Poster_ItemLayout</include>
							<include>GlobalSearch_UnWatchedPoster</include>
						</itemlayout>
						<itemlayout condition="Container.Content(Episodes)" height="256" width="239.4">
							<include>HomeWidgets_Landsacape_ItemLayout</include>
							<include>GlobalSearch_UnWatchedLandscape</include>
						</itemlayout>
						<itemlayout condition="![Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos) | Container.Content(Episodes)]" height="256" width="199.5">
							<include>HomeWidgets_Square_ItemLayout</include>
						</itemlayout>
						<focusedlayout condition="Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos)" height="256" width="149.5">
							<include>HomeWidgets_Poster_Focusedlayout</include>
							<include>GlobalSearch_UnWatchedPoster</include>
						</focusedlayout>
						<focusedlayout condition="Container.Content(Episodes)" height="256" width="239.4">
							<include>HomeWidgets_Landsacape_Focusedlayout</include>
							<include>GlobalSearch_UnWatchedLandscape</include>
						</focusedlayout>
						<focusedlayout condition="![Container.Content(Movies) | Container.Content(TVShows) | Container.Content(Seasons) | Container.Content(MusicVideos) | Container.Content(Episodes)]" height="256" width="199.5">
							<include>HomeWidgets_Square_Focusedlayout</include>
						</focusedlayout>
					</control>
					<include>GlobalSearch_NavigationArrows</include>
				</control>
				<!-- Search Categories -->
				<control type="group">
					<left>0</left>
					<top>475</top>
					<animation type="Conditional" condition="Control.IsVisible(991) | Control.HasFocus(9000)">
						<effect type="slide" start="0,-20" end="0,0" time="200" tween="sine" easing="out"/>
						<effect type="fade" start="0" end="100" time="200"/>
					</animation>
					<animation type="Conditional" condition="![Control.IsVisible(991) | Control.HasFocus(9000)]">
						<effect type="slide" start="0,0" end="0,-20" time="200" tween="sine" easing="out"/>
						<effect type="fade" start="100" end="0" time="200"/>
					</animation>
					<control type="fixedlist" id="9000">
						<left>46</left>
						<top>0</top>
						<width>1950</width>
						<height>125</height>
						<onup>50</onup>
						<ondown>50</ondown>
						<onleft>9000</onleft>
						<onright>9000</onright>
						<onback>50</onback>
						<focusposition>0</focusposition>
						<orientation>horizontal</orientation>
						<scrolltime tween="quadratic" easing="out">250</scrolltime>
						<itemlayout width="197" height="43">
							<control type="label">
								<include content="SearchResultsSubMenus_Layout">
									<param name="label_width" value="195"/>
									<param name="label_height" value="37"/>
									<param name="fontsize" value="FontSize_22"/>
									<param name="textcolor" value="66white"/>
								</include>
							</control>
						</itemlayout>
						<focusedlayout width="250" height="43">
							<control type="label">
								<include content="SearchResultsSubMenus_Layout">
									<param name="label_width" value="250"/>
									<param name="label_height" value="30"/>
									<param name="fontsize" value="FontSize_34"/>
									<param name="textcolor" value="white"/>
								</include>
							</control>
						</focusedlayout>
					</control>
					<control type="image">
						<left>0</left>
						<top>42</top>
						<width>1280</width>
						<height>4</height>
						<aspectratio>stretch</aspectratio>
						<texture background="true">windows/home/submenus_line.png</texture>
						<visible>!String.IsEmpty(Container(9000).ListItem.Label)</visible>
					</control>
				</control>
			</control>

			<include>CommonDialogsFadeOutBG</include>
			<include>CommonNowPlaying</include>

			<!-- ================ -->
			<!-- Top Content Info -->
			<!-- ================ -->
			<control type="group">
				<left>45</left>
				<top>25</top>
				<include>ShutdownMenuAnimation</include>
				<include>OpenCloseSlideAnimation</include>
				<include>VisibleHiddenSlideAnimation</include>
				<visible>![Window.IsActive(DialogVideoInfo.xml) | Window.IsActive(DialogMusicInfo.xml) | Window.IsActive(DialogAddonInfo.xml) | Window.IsActive(DialogPVRInfo.xml) | Window.IsActive(PlayerControls) | Window.IsActive(Favourites)]</visible>
				<control type="grouplist">
					<left>0</left>
					<top>0</top>
					<height>70</height>
					<width>1000</width>
					<align>left</align>
					<itemgap>15</itemgap>
					<orientation>horizontal</orientation>
					<include>LogoBig</include>
					<control type="label">
						<label>$LOCALIZE[194] [COLOR=$VAR[Text.GlobalColor]]$INFO[Control.GetLabel(991)][/COLOR]</label>
						<include>TopBigLabel</include>
						<visible>Control.IsVisible(991)</visible>
						<animation effect="slide" end="0,8" condition="Control.IsVisible(991)">Conditional</animation>
					</control>
					<control type="label">
						<label>$VAR[GlobalSearchResults_ContentHeadLabel]</label>
						<include>TopBigLabel</include>
						<visible>![Control.IsVisible(991) | Control.IsVisible(999)]</visible>
					</control>
					<control type="label" id="999">
						<label>$LOCALIZE[284]</label>
						<animation effect="slide" end="0,8" condition="true">Conditional</animation>
						<include>TopBigLabel</include>
					</control>
				</control>
				<control type="label">
					<description>Page Count Label</description>
					<left>66</left>
					<top>45</top>
					<width>1000</width>
					<height>20</height>
					<font>FontSize_18</font>
					<textcolor>$VAR[Text.GlobalColor]</textcolor>
					<shadowcolor>77000000</shadowcolor>
					<scroll>false</scroll>
					<label>$INFO[Container(50).CurrentItem,$LOCALIZE[31025] ]$INFO[Container(50).NumItems, $LOCALIZE[31024] ]</label>
					<visible>![Control.IsVisible(991) | String.IsEmpty(Container(9000).ListItem.Label)]</visible>
				</control>
			</control>

			<control type="label" id="991">
				<description>Search Category</description>
				<left>-2000</left>
				<top>-2000</top>
			</control>
			<control type="button" id="990">
				<description>New Search</description>
				<left>-2000</left>
				<top>-2000</top>
			</control>

			<include>CommonScrollingLetters</include>
			<include>CommonNowPlaying</include>
			
			<control type="group">
				<left>25</left>
				<top>45</top>
				<include>OpenCloseSlideAnimation</include>
				<include>VisibleHiddenSlideAnimation</include>
				<include>WeatherAndClock</include>
				<visible>![Container.Scrolling | Window.IsActive(DialogVideoInfo.xml) | Window.IsActive(DialogMusicInfo.xml) | Window.IsActive(DialogAddonInfo.xml) | Window.IsActive(DialogPVRInfo.xml) | Window.IsActive(PlayerControls) | Window.IsActive(Favourites)]</visible>
			</control>

	</controls>
</window>
